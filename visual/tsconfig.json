{
    "compilerOptions": {
        "allowJs": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "outDir": "./.tmp/build/",
        "moduleResolution": "node",
        "target": "ES2020",
        "module": "ES2020",
        "strict": false,
        "declaration": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "downlevelIteration": true,
        "noImplicitAny": false,
        "sourceMap": true,
        "resolveJsonModule": true,
        "lib": [ "es2019", "dom", "esnext.array", "ES2015.Generator"],
        "jsx": "react",
        "baseUrl": "./",
        "paths": {
            "charticulator": ["./charticulator/src/*"],
            "src": ["./visual/src/*"],
            "resources": ["./charticulator/resources/*"],
            "assets": ["./visual/assets/*"]
        }
    },
    "files": [
        "../charticulator/src/package.d.ts",
        "./src/types.d.ts",
        "./src/visualPlugin.ts"
    ],
}